<% if user_signed_in? %>
 <% @items.each do |item| %>
  
  <% if item.completed? %>
   
   <h2 style="opacity: 0.5;"><strike><%= link_to item.title, item %></strike></h2>
   <p style="opacity: 0.5;"><%= item.description %></p>
   <p style="opacity: 0.5;"><%= time_ago_in_words(item.completed_at) %></p>
   <p><%= link_to new_item_url(item), method: :put do %></p>
     <i class="fa fa-lg fa-check"></i>
   <% end %>
   <p><%= link_to item, method: :delete, data: { confirm: "U sure bro?" } do %></p>
     <i class="fa fa-lg fa-trash"></i>
   <% end %>
 
  <% else %>
   
   <h2><%= link_to item.title, item %></h2>
   <p><%= item.description %></p>
   <p><%= time_ago_in_words(item.created_at) %></p>
   <p><%= link_to complete_item_path(item), method: :patch do %></p>
     <i class="fa fa-lg fa-check"></i>
   <% end %>
   <p><%= link_to item, method: :delete, data: { confirm: "U sure bro?" } do %></p>
     <i class="fa fa-lg fa-trash"></i>
   <% end %>
  <% end %>
 <% end %>
<% else %>
 <%= render 'layouts/static_landing_page' %>
<% end %>
